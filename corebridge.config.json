{
  "$schema": "https://corebridge.dev/schema/config.json",
  "sourceDir": "./src",
  "outputDir": "./packages",
  "domains": [
    "user",
    "project"
  ],
  "adapters": [
    "web",
    "mobile"
  ],
  "contracts": {
    "format": "openapi",
    "version": "3.1.0"
  },
  "analysis": {
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/node_modules/**",
      "**/dist/**"
    ]
  }
}
